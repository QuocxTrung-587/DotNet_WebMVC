@model UserDetailsViewModel

<h1>Chi tiết khách hàng</h1>

<dl class="row">
    <dt class="col-sm-2">ID</dt>
    <dd class="col-sm-10">@Model.User.Id</dd>

    <dt class="col-sm-2">Tên đăng nhập</dt>
    <dd class="col-sm-10">@Model.User.Username</dd>

    <dt class="col-sm-2">Tên đầy đủ</dt>
    <dd class="col-sm-10">@Model.User.FullName</dd>

    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.User.Email</dd>

    <dt class="col-sm-2">Điện thoại</dt>
    <dd class="col-sm-10">@Model.User.Phone</dd>

    <dt class="col-sm-2">Giới tính</dt>
    <dd class="col-sm-10">@Model.User.Gender</dd>

    <dt class="col-sm-2">Đơn hàng</dt>
</dl>

<!-- Add a back button to navigate back to the list -->
<a asp-action="Index">Quay lại danh sách</a>
